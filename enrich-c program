#include<stdio.h>
int main()
{
    int i,num,rem=0,rev=0;
     
    printf("\n Enter The Number:");
    scanf("%d",&num);
    for(i=num;i>0; rev=rev*10+rem  )
    {
        rem=i%10;
        i=i/10;
    }
    if(rev==num)
    {
        printf("\n %d is a Palindrome Number",num);
    }
    else
    {
        printf("\n %d is not a Palindrome Number",num);
    }
}
